{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@shared/*": ["../../packages/shared/dist/*"],
      "@/*":  ["./src/*"]
    },
    "types": ["vitest/globals"],
  },
  "exclude": ["node_modules/vite", "vitest.config.ts", "dist"]
}
