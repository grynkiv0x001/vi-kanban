{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "strictNullChecks": true,
    "noEmit": true,
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"],
      "@/*":  ["./src/*"]
    }
  }
}
